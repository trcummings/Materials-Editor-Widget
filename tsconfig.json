{
    "compilerOptions": {
      "target": "ES2020",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react"
    },
    "include": ["src"],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }
  